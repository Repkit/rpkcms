{% extends '@layout/default.html.twig' %}

{% block title %}Page categories{% endblock %}

{% block content %}
<a target="_self" href="{{ url('admin.page-category', {'action': 'add'}) }}">Add new page category</a>
<ul id="navigation">
{% for page_category in page_categories %}
    <li>
        <a href="#">{{ page_category.name }}</a>
        <a target="_self" href="{{ url('admin.page-category', {'action': 'edit','id' : page_category.id}) }}">edit</a>
    </li>
{% endfor %}
</ul>
<hr>
{#pagination placeholder#}
{% if pagination.count > 1 %}
<div class="pagination"></div>
{% endif %}

{% endblock %}

{#pagination script#}
{% block javascript %}
{% if pagination.count > 1 %}
<script src="/theme/admin/js/bootstrap-pagination.js"></script>
<script type="text/javascript">
    $(function(){
        var target = $('.pagination'),
        options = {
            prev: 'prev',
            next: 'next',
            left: 3,
            right: 3,
            page: {{ pagination.page }},
            lastPage: {{ pagination.count }},
            click: function(i) {
                console.log(i);
                options.page = i;
                target.pagination(options);
                window.location.href = window.location.origin + window.location.pathname + '?page='+i+'&size={{ pagination.size }}';
            }
        };
        target.pagination(options);
    });
</script>
{% endif %}
{% endblock %}