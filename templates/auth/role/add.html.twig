{% extends '@layout/default.html.twig' %}

{% block title %}Add new role{% endblock %}

{% block content %}

{% if messages is defined%}
    {% for message in messages %}
        <div class="alert alert-danger" role="alert">{{message}}</div>
    {% endfor %}
{% endif %}

<form method="post" action="{{ url('admin.auth.role', {'action': 'add'}) }}">
      
    {#name#}
    <div class="form-group">
        <label for="role_name">Name</label>
        <input type="text" name="name" class="form-control" id="role_name" placeholder="name" required>
    </div>
  
    {#parent#}
    <div class="form-group">
        <label for="role_parents">Parent</label>
        <select id="role_parents" class="form-control" name="parentId">
            <option value="0">None</option>
            {% for idx, parent in role_parents %}
                <option value="{{ parent.id }}">{{ parent.name }}</option>
            {% endfor %}
        </select>
    </div>
  
    {#state#}
    <div class="form-group">
        <label for="category_state">State</label>
        <select id="category_state" class="form-control" name="state">
          <option value="1">Active</option>
          <option value="0">Inactive</option>
        </select>
    </div>
  
    <button type="submit" class="btn btn-default">Submit</button>
</form>

{% endblock %}
